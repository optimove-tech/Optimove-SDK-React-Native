{
  "name": "@optimove-inc/react-native",
  "version": "3.0.1",
  "description": "Optimove React Native SDK",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "bob build",
    "release": "release-it --only-version",
    "format": "./node_modules/.bin/prettier --write \"**/*.{ts,tsx}\"",
    "example": "yarn --cwd example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "bootstrap": "yarn example && yarn install && yarn example pods",
    "prettier:write": "npx prettier --write **/*.{js,jsx,ts,tsx,json} && npx prettier --write *.{js,jsx,ts,tsx,json}"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/optimove-tech/Optimove-SDK-React-Native/",
  "author": "Optimove <konstantin_a@optimove.com> (https://www.optimove.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/optimove-tech/Optimove-SDK-React-Native//issues"
  },
  "homepage": "https://github.com/optimove-tech/Optimove-SDK-React-Native/#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "pod-install": "^0.1.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.76.9",
    "react-native-builder-bob": "^0.40.8",
    "release-it": "^19.0.4",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.4",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "OptimoveReactNative",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.optimove.reactnative"
    }
  },
  "create-react-native-library": {
    "languages": "java-objc",
    "type": "turbo-module",
    "version": "0.52.0"
  }
}
